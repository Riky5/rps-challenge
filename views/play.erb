<head>
  <link href="<%= url('/play.css') %>" rel="stylesheet" type="text/css" />
</head>

<body>
  <div id="container">

    <h1> Bot vs. <%= @player.name %> </h1>
    <%# after player click on one button this section is updated %>
    <section>
      <p class='choice'><%= @player.name %>'s choice:</p>
      <p class='rps'><%= @rock || @paper || @scissors %> </p>
    <%# Bot's random pick %>vs.
      <p class='choice'>Bot's choice:</p>
      <p class='rps'> <%= @choice %> </p>
    </section>

    <p> Choose wisely: </p>
    <%# 3 choices %>
    <section id='rps-options'>
      <form action='/choose_rock'>
        <button type='submit'>Rock🗿</button>
        <button type='submit' formaction='/choose_paper'>Paper📃</button>
        <button type='submit' formaction='/choose_scissors'>Scissors✂️</button>
      </form>
    </section>
    
    <% if @winner %>
     <h3><%= @winner %> wins!🥳</h3>
    <% end %>
  </div>
</body>